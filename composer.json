{
  "name": "tour-travels/backend",
  "description": "REST API backend for tours and travels platform in PHP",
  "type": "project",
  "require": {
    "php": ">=7.4",
    "firebase/php-jwt": "^6.0",
    "vlucas/phpdotenv": "^5.0",
    "phpmailer/phpmailer": "^7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "php -r \"copy('.env.example', '.env');\""
    ],
    "test": "phpunit",
    "test-coverage": "phpunit --coverage-html coverage"
  }
}
